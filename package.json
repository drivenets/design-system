{
	"name": "@drivenets/design-system-monorepo",
	"version": "0.0.0",
	"private": true,
	"packageManager": "pnpm@10.0.0",
	"scripts": {
		"lint": "turbo run lint:root lint",
		"lint:root": "concurrently -n eslint,tsc -c magenta,blue 'eslint .' 'tsc'",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "turbo run test",
		"build": "turbo run build",
		"start": "pnpm run --filter @drivenets/design-system storybook"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@commitlint/types": "^20.2.0",
		"@drivenets/commitlint-plugin-design-system": "workspace:^",
		"@eslint/js": "^9.39.2",
		"@types/node": "^25.0.3",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.2",
		"prettier": "^3.7.4",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0"
	}
}
